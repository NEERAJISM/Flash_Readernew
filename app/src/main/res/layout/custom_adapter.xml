<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_custom_adapter"
    android:layout_width="fill_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:background="#ffffff"
    android:orientation="horizontal"
    android:padding="6dip"
    android:weightSum="100">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="85"
        >
    <ImageView
        android:background="@drawable/pdf"
        android:id="@+id/iv_custom_adapter"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_margin="2dp"
         />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="15"
        android:orientation="vertical"
        android:weightSum="100">

        <TextView
            android:id="@+id/tv_title_custom_adapter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="42"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:singleLine="true"
            android:text="Title"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="58"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:id="@+id/tv_size_custom_adapter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="65"
                android:ellipsize="marquee"
                android:gravity="center_vertical"
                android:paddingStart="20dp"
                android:singleLine="true"
                android:text="Size"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_date_custom_adapter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="35"
                android:ellipsize="marquee"
                android:gravity="right|center_vertical"
                android:paddingEnd="20dp"
                android:singleLine="true"
                android:text="date"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>